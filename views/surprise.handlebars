<html>

<head>
    <title>Adventum</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/homeStyle.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link href="../css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="css/navBar.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head>

<body>
    <!-- Top Nav Bar -->
    <ul class="navbar-list">
        <li class="navbar-list"><a href="/list"><i class="fa fa-th-list fa-2x"></i></a></li>
        <li class="navbar-list"><a href="/map"><i class="fa fa-globe fa-2x"></i></a></li>
        <li class="navbar-list"><a href="#logout"><i class="fa fa-sign-out fa-2x"></i></a></li>
    </ul>
    <br>
    <div id="logout" class="overlay">
        <div class="popup">
            <center>
            <div class="logout-content">
                Are you sure you want to logout?<br>
                <ul class="logout-list">
                    <li class="logout-list"><a href="#" style="background-color: #333333">Cancel</a></li>
                    <li class="logout-list"><a href="/" style="background-color: #00B0B0"><b>Logout</b></a></li>
                </ul>
            </div>
            </center>
        </div>
    </div>
    <!-- End of Top Nav Bar code -->

    <div>
        <div class="container-surprise" style="background-color: #333333; margin-top: 3%" align="center">
            <h1>How about this?</h1>
            {{#with currPlace}}
            <div id="{{id}}" style="margin-top: 8%">
                <h2>{{name}}</h2>
                <img src="{{image}}" height="40%" width="70%">
                <p style="margin-top: 2%">
                    Type: {{type}}
                    <br> Friend Checkins: {{numCheckins}}
                </p>
                <p style="margin-top: 5%">
                    <a href="{{link}}">{{link}}</a>
                    <br> {{phone}}
                    <br> {{address}}
                </p>
                <p style="margin-top: 5%" align="left">
                    {{description}}
                </p>
            </div>
            {{/with}}
        </div>
        <div>
            <table width="100%">
                <tr>
                    <td width="100%">
                        <button class="btn-surprise-again" onclick="surpriseMe()">Not feeling this? Click me again!</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    <!-- <script src="../routes/surprise.js"></script> -->
    <script>
        function surpriseMe() {
            window.location.href = "/surprise";
        }
    </script>
</body>

</html>
