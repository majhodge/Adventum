<html>

<head>
    <title>Adventum</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/bootstrap-theme.min.css" rel="stylesheet">
    <!-- local css file -->
    <link href="css/homeStyle.css" rel="stylesheet">
</head>

<body>
    <ul class="navigation">
        <li class="nav-item"><a href="/map">Adventum</a></li>
        <!-- <li class="nav-item"><a href="/myProfile">My Profile</a></li>
        <li class="nav-item"><a href="/settings">Settings</a></li> -->
        <li class="nav-item"><a href="/">Logout</a></li>
    </ul>
    <input type="checkbox" id="nav-trigger" class="nav-trigger" />
    <label for="nav-trigger" style="margin-top: 1%; margin-left: 3%"></label>
    <!-- Everything that is not nav menu goes here -->
    <div class="site-wrap">
        <div class="container" style="margin-top: 7%">
            <center>
                <h1>List View</h1></center>
            {{#each places}}
            <div id="{{id}}">
                <table style="margin-bottom: 3%">
                    <tr>
                        <td width="7%">
                            {{id}}
                        </td>
                        <td width="20%">
                            <img src="{{image}}" height="60px" width="60px">
                        </td>
                        <td width="53%">
                            <!-- <td width="53%" valign="top" style="padding-top: 1%"> -->
                            <b><a href="{{link}}">{{name}}</a></b>
                            <br>
                            <i>Type: {{type}}</i>
                        </td>
                        <td align="center" width="20%">
                            Checkins:
                            <br> {{numCheckins}}
                        </td>
                    </tr>
                </table>
            </div>
            {{/each}}
            <p align="center" style="margin-top: 6%; margin-bottom: 8%">
                <a href="/map">Back to Map</a>
            </p>
        </div>
    </div>
</body>

</html>
